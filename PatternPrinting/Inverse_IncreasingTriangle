package loopingstructure;
import java.util.Scanner;
public class IncreasingTriangle {
     public static void main(String[] str) {
    	 int x,y,z;
    	 Scanner sc=new Scanner(System.in);
    	 System.out.println("Limit: ");
    	 z=sc.nextInt();
    	 for(x=z;x>=1;x--) {
    		 for(y=x;y>=1;y--) {
    			 System.out.print(y);
    		 }
    		 System.out.println();    		 
    	 }
     }
}
