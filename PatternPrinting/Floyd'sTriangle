package loopingstructure;
import java.util.Scanner;
public class FloydsTriangle {
	public static void main(String[] str) {
		int x,y,z;
		int num=1;
		Scanner sc=new Scanner(System.in);
		System.out.println("Limit: ");
		z=sc.nextInt();
		for(x=1;x<=z;x++) {
			for(y=1;y<=x;y++) {
				System.out.print(num++ +" ");
			}
			System.out.println();
		}
	}
}
