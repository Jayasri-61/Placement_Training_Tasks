package loopingstructure;
import java.util.Scanner;
public class RightAngleTriangle {
    public static void main(String[] str) {
    	int x,y,z;
    	Scanner sc=new Scanner(System.in);
    	System.out.println("Limit: ");
    	z=sc.nextInt();
    	for(x=1;x<=z;x++) {
    		for(y=1;y<=x;y++) {
    			System.out.print("*");
    		}
    		System.out.println();
    	}
    }
}
