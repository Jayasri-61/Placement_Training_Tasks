package loopingstructure;
import java.util.Scanner;
public class FloydsTriangle {
	public static void main(String[] str) {
		int x,y,z;
		int num=15;
		Scanner sc=new Scanner(System.in);
		System.out.println("Limit: ");
		z=sc.nextInt();
		for(x=z;x>=1;x--) {
			for(y=x;y>=1;y--) {
				System.out.print(num-- +" ");
			}
			System.out.println();
		}
	}
}
